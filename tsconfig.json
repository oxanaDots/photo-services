{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx", // Use 'react-jsx' for automatic runtime, 'react' for classic runtime

    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node"]
  },
  "include": ["booking-backend/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
