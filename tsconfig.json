{
  "compilerOptions": {
    "target": "es6",               
    "module": "commonjs",               // Use ES modules, compatible with modern bundlers
    "strict": true,                   // Enable strict type-checking options
    "esModuleInterop": true,          // Enables interoperability between CommonJS and ES Modules
    "skipLibCheck": true,             // Skip type checking of declaration files
    "jsx": "react-jsx",               // Use the new JSX runtime (React 17+)
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",              // Output directory for compiled files
    "rootDir": "./src"                // Source directory for TypeScript files
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"], // Include TypeScript files in src
  "exclude": ["node_modules", "build"]       // Exclude node_modules and build directories
}
